---
import Logo from '../assets/logo.svg'
import GrandLogo from '../components/GrandLogo.astro'
import ShoppingBag from '../assets/icons/shoping-bag.svg'
import Login from '../assets/icons/login.svg'
import HotSales from '../assets/icons/hot-sales.svg'
import Arrow from '../assets/icons/arrow.svg'
import Story from '../assets/icons/story.svg'
import IceCreame from '../assets/icons/ice-cream.svg'
import Hamburger from '../assets/icons/hamburger.svg'
import LinkButton from '../components/LinkButton.astro'
import NavigationLink from '../components/NavigationLink.astro'

// Component Header
interface Props {
  links: string[]
}

const { links } = Astro.props
const description = 'Generic Component Description'
---

<header
  class="absolute top-0 left-0 right-0 h-fit z-50 max-w-screen-large mx-auto p-5 large:p-10">
  <!-- Header in first Page -->
  <div
    x-show="!scrollHeader"
    x-transition:leave="transition-all ease-in duration-500"
    x-transition:enter="transition-all  ease-out duration-300"
    x-transition:enter-start="opacity-0 "
    x-transition:enter-end="opacity-100"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="h-28 w-full flex justify-between items-center px-2 tablet:px-12">
    <!-- Left Section / Links -->
    <div class="text-sm font-medium flex gap-10 items-center">
      <div
        class="bg-pink-200 rounded-full px-3 py-1 ring-[2px] ring-sky-950 hover:py-2 transition-all delay-75 cursor-pointer ease-in-out">
        <Hamburger
          class="fill-sky-950"
          width={28}
          height={24}
        />
      </div>

      <div class="hidden tablet:flex gap-10">
        <LinkButton
          small
          fullWidth
          icon
          title="Our Story">
          <Story
            width={20}
            height={20}
          />
        </LinkButton>
        {
          links.slice(0, 1).map((link) => (
            <LinkButton
              small
              fullWidth
              title={link}
            />
          ))
        }
      </div>
    </div>
    <!-- Center Section / Logo -->
    <div
      class="absolute inset-0 flex flex-col w-fit mx-auto justify-center items-center">
      <GrandLogo
        title="headerlogo"
        emblem
      />
    </div>
    <!-- Right Section / Call to Action -->
    <div class="flex gap-8">
      <!-- Call to Action -->
      <button
        class="text-md h-fit border-[3px] border-sky-950 font-semibold px-3 justify-center items-center rounded-full gap-2 relative bg-gradient-to-tr from-sky-200 to-sky-100 text-sky-950 py-1.5 hidden tablet:flex shadow-xl shadow-black/10 hover:scale-95 transition-all duration-200 ease-out">
        <ShoppingBag
          width={28}
          height={28}
        />
        Shop Now
      </button>

      <div class="flex justify-center items-center gap-2">
        <!-- Gelato Icon -->
        <button
          class="hover:-translate-y-1 transition-all ease-out duration-200">
          <IceCreame
            width={28}
            height={28}
          />
        </button>

        <!-- Login / Signup -->
        <button
          class="hidden tablet:flex hover:-translate-y-1 transition-all ease-out duration-200">
          <Login
            width={28}
            height={28}
          />
        </button>
      </div>
    </div>
  </div>

  <!-- Scrolling Header -->
  <div
    x-show="scrollHeader"
    x-cloak
    x-transition:leave="transition ease-in duration-200 infinite"
    x-transition:enter="transition ease-out duration-200 infinite"
    x-transition:enter-start="opacity-0 -translate-y-24"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 -translate-y-24"
    class="fixed top-0 w-screen px-6 left-1/2 transform -translate-x-1/2 bg-sky-200/60 backdrop-blur-xl border-b-2 border-b-sky-950">
    {/*<!-- Container -->*/}
    <div
      class="flex justify-between items-center max-w-screen-large mx-auto delay-150 mobile:hover:py-6 py-4 duration-300 px-0 large:px-0 ease-out relative z-50">
      {/*<!-- Logo -->*/}
      <!-- Left Section / Links -->
      <div class="text-sm font-medium flex gap-10 items-center">
        <div
          class="bg-pink-200 rounded-full px-3 py-1 ring-[2px] ring-sky-950 hover:py-2 transition-all delay-75 cursor-pointer ease-in-out">
          <Hamburger
            class="fill-sky-950"
            width={28}
            height={24}
          />
        </div>
        <div class="hidden tablet:flex gap-10">
          <LinkButton
            small
            fullWidth
            icon
            title="Our Story">
            <Story
              width={20}
              height={20}
            />
          </LinkButton>
          {
            links.slice(0, 1).map((link) => (
              <LinkButton
                small
                fullWidth
                title={link}
              />
            ))
          }
        </div>
      </div>
      <!-- Center Section / Logo -->
      <div
        class="absolute inset-0 flex justify-center items-center w-fit mx-auto">
        <GrandLogo
          small
          title="headerlogo"
        />
      </div>
      <!-- Right Section / Call to Action -->
      <div class="flex gap-8">
        <!-- Call to Action -->
        <button
          class="text-md h-fit border-[2px] border-sky-950 font-semibold px-2 justify-center items-center rounded-xl gap-2 relative bg-gradient-to-tr from-sky-200 to-sky-100 text-sky-950 py-1 hidden tablet:flex hover:scale-105 transition-all">
          <ShoppingBag
            width={28}
            height={28}
          />
          Shop Now
        </button>

        <div class="flex justify-center items-center gap-2">
          <!-- Gelato Icon -->
          <button>
            <IceCreame
              width={28}
              height={28}
            />
          </button>

          <!-- Login / Signup -->
          <button class="hidden tablet:flex">
            <Login
              width={28}
              height={28}
            />
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
