---
import SectionLayout from '../../layouts/SectionLayout.astro'
import Arrow from '../../assets/icons/arrow.svg'
import ShoppingBag from '../../assets/icons/shoping-bag.svg'

// Interface
interface Props {
  title?: string
  description?: string
}

// Props
const { title, description } = Astro.props

// Page Properties
const sectionTitle = title || 'Page Title'
const sectionDescription = description || 'Generic Page'
---

<SectionLayout
  id={sectionTitle}
  title={sectionTitle}
  description={sectionDescription}
  classes="relative">
  <!-- Page Contents -->
  <div
    class="absolute top-0 mt-48 flex justify-center items-center z-20 flex-col scale-[0.95] h-fit">
    <div
      class="flex flex-col items-center gap-4 border rounded-full justify-center border-sky-900 px-2.5 py-0.5 mb-12 bg-pink-200/20">
      <h3 class="text-sky-950/90 text-xs font-semibold">
        ‚≠ê‚≠êChristmass discounts are here for you <b class="text-sm">üéÑ</b> | Click
        to see our best offers ‚≠ê‚≠ê
      </h3>
    </div>
    <h2 class="text-sky-950/90 text-6xl font-semibold mb-4">
      Heavenly Touch, Divine Scent
    </h2>
    <h3 class="text-black/60 text-xl">
      Infused with pure <em class="font-bold">Italian</em> Artisanal Gelato Aromas
    </h3>
    <div class="flex gap-3 text-sky-950">
      <button
        class="px-4 py-2.5 justify-center items-center text-lg rounded-2xl flex gap-2 relative mt-8 ring-2 ring-sky-950/80 bg-pink-200-950/5">
        Visit our shop
        <ShoppingBag
          width={24}
          height={24}
        />
      </button>
      <button
        class="px-4 py-2.5 justify-center items-center text-lg rounded-2xl flex gap-2 relative mt-8 underline underline-offset-4">
        Learn more
        <Arrow
          width={24}
          height={24}
          class="rotate-90"
        />
      </button>
    </div>
  </div>

  <!-- Background Image -->
  <div class="flex min-h-fit h-screen w-screen">
    <img
      class="w-full h-full object-cover object-top"
      src="./bg.png"
      alt=""
    />
  </div>

  <!-- Bottom Overlay -->
  <div
    class="absolute top-1/2 bottom-0 w-full to-30% bg-gradient-to-t from-sky-200/100 to-black/0">
  </div>
  <!-- Top Overlay -->
  <div
    class="absolute top-0 bottom-1/2 w-full to-50% bg-gradient-to-b from-sky-50/100 to-sky-100/0">
  </div>
</SectionLayout>
